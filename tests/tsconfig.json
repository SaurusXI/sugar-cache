{
    "compilerOptions": {
        "target": "es6",
        "sourceMap": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "experimentalDecorators": false,
        "emitDecoratorMetadata": false,
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "esModuleInterop": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist",
        "baseUrl": "./lib/",
        "ignoreDeprecations": "5.0"
    },
    "include": ["./**/*.ts"]
}